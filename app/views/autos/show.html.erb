

<div id="show" class="container-fluid">
  <div class="row">

    <h1><%= "#{@listing.year} #{@listing.auto_maker} #{@listing.auto_model}" %></h1>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->


  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="http://www.planwallpaper.com/static/images/colorful-triangles-background_yB0qTG6.jpg" alt="Chania"> 

    </div>

    <div class="item">
      <img src="http://www.intrawallpaper.com/static/images/Background-HD-High-Quality-C23.jpg" alt="Chania">
    </div>

    <div class="item">
      <img src="http://www.intrawallpaper.com/static/images/glamor_background_hd_picture_4_169658.jpg" alt="Flower">
    </div>

  </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      
        <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active" ><img src="http://www.planwallpaper.com/static/images/colorful-triangles-background_yB0qTG6.jpg"></li>
        <li data-target="#myCarousel" data-slide-to="1"><img src="http://www.intrawallpaper.com/static/images/Background-HD-High-Quality-C23.jpg" alt="Chania"></li>
        <li data-target="#myCarousel" data-slide-to="2"><img src="http://www.intrawallpaper.com/static/images/glamor_background_hd_picture_4_169658.jpg" alt="Flower"></li>
      </ol>
    </div> 
    
    <div class="auto-infoBar">
      <div class="infoBar-section"><h2>Price:</h2><sup>$</sup><h1><%= @listing.price %></h1></div>
      <div class="infoBar-section"><h2>Title:</h2><h1><%= @listing.title %></h1></div><div class="infoBar-section"><h2>Ordmeter:</h2><h1><%= @listing.price %></h1></div>
    </div>
    
    <div id="main-content" class="col-md-12">
 
            <ul class="auto-list">
              <div class="list-set">

                <li class="list-heading">Make</li>
                <li class="alt list-content"><%= @listing.auto_maker.capitalize %></li>
            
                <li class="list-heading">Model</li>
                <li class="alt list-content"><%= @listing.auto_model.capitalize %></li>

                <li class="list-heading">Year</li>
                <li class="alt list-content"><%= @listing.year %></li>
              </div>                
            </ul>


        <div id="listing-info">
          <div id="contact-info">Contact Info</div>
          <div id="description">Description</div>
        </div>   
 
    </div>

      <div id="auto-features">features</div>
 
   </div>
  </div> <!-- end of container -->
